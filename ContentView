import SwiftUI

struct ContentView: View {
    var body: some View {
        VStack(spacing: 0) {
            // Top row with three rectangles
            HStack(spacing: 0) {
                Rectangle()
                    .fill(Color.red)
                    .frame(width: UIScreen.main.bounds.width / 3, height: 150)
                
                Rectangle()
                    .fill(Color.green)
                    .frame(width: UIScreen.main.bounds.width / 3, height: 150)
                
                Rectangle()
                    .fill(Color.yellow)
                    .frame(width: UIScreen.main.bounds.width / 3, height: 150)
            }
            
            // Gray rectangle
            Rectangle()
                .fill(Color.gray)
                .frame(height: 80)
            
            // A blue rectangle with a white square in the middle
            ZStack {
                Rectangle()
                    .fill(Color.blue)
                
                Rectangle()
                    .fill(Color.white)
                    .frame(width: 80, height: 80)
            }
            .frame(height: 300)
            
            // Lower red rectangle with black square on the right
            HStack {
                Rectangle()
                    .fill(Color.red)
                
                Spacer()
                
                Rectangle()
                    .fill(Color.black)
                    .frame(width: 50, height: 50)
            }
            .frame(height: 50)
        }
        .edgesIgnoringSafeArea(.all)
    }
}
